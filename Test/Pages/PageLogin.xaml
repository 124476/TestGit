<Page x:Class="Test.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Name" FontSize="17"></TextBlock>
            <TextBox x:Name="Name" FontSize="17"></TextBox>
            <TextBlock Text="Password" FontSize="17"></TextBlock>
            <TextBox x:Name="Password" FontSize="17"></TextBox>
            <Button x:Name="Open" FontSize="17" Click="Open_Click" Content="Open"></Button>
        </StackPanel>
    </Grid>
</Page>
